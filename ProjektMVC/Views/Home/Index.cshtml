@{
    ViewBag.Title = "Home Page";
}

<center>
    <img src="https://ansicollege.net/wp-content/uploads/Library-gallery-6.jpg" alt="Mountain View">
</center>

<br />

<center>
    <h2>*** Latest additions ***</h2>
</center>
<table class="table">
    <tr>
        <th>
            Title
        </th>
        <th>
            Author
        </th>
        <th>
            Category
        </th>
        <th>
            Release date
        </th>
        <th>
            Add date
        </th>
        <th></th>
    </tr>

    @foreach (var item in ViewBag.latestBooks)
    {
        <tr>
            <td>
                @item.title
            </td>
            <td>
                @item.author
            </td>
            <td>
                @item.Category.name
            </td>
            <td>
                @item.releaseDate.ToString("dd/MM/yyyy")
            </td>
            <td>
                @item.addDate.ToString("dd/MM/yyyy")
            </td>
            <td>
                @Html.ActionLink("Details", "Details", "Books", new { id = item.bookID }, null)
            </td>
        </tr>
    }
</table>

<br />

<center>
    <h2>*** Latest messages ***</h2>
</center>
<div class="row">
    @foreach (var item in ViewBag.latestMessages)
    {
        <div class="col-md-8">
            <h2>
                @item.title
            </h2>
            <p>
                @item.addDate.ToString("dd/MM/yyyy")
            </p>
            <p>
                @item.content
            </p>
        </div>
        <br />
    }
